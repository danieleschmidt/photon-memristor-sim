# Photon-Memristor-Sim Environment Configuration

# Development Environment
RUST_LOG=debug
RUST_BACKTRACE=1
PYTHONPATH=./python

# Simulation Configuration
PHOTON_SIM_DEFAULT_WAVELENGTH=1550e-9
PHOTON_SIM_DEFAULT_POWER=1e-3
PHOTON_SIM_MAX_DEVICES=100000
PHOTON_SIM_PRECISION=f64

# Performance Settings
PHOTON_SIM_NUM_THREADS=0  # 0 = auto-detect CPU cores
PHOTON_SIM_ENABLE_SIMD=true
PHOTON_SIM_CACHE_SIZE=1GB
PHOTON_SIM_MEMORY_POOL=true

# Numerical Solver Configuration
FDTD_GRID_RESOLUTION=10e-9
BPM_STEP_SIZE=1e-6
THERMAL_TIME_STEP=1e-12
CONVERGENCE_TOLERANCE=1e-9

# Device Model Parameters
PCM_DEFAULT_MATERIAL=GST
MEMRISTOR_DEFAULT_OXIDE=HfO2
WAVEGUIDE_DEFAULT_WIDTH=450e-9
COUPLING_GAP_DEFAULT=200e-9

# Visualization Settings
VIZ_3D_ENABLE=true
VIZ_FRAMERATE=30
VIZ_RESOLUTION=1920x1080
VIZ_QUALITY=high

# Testing Configuration
TEST_RANDOM_SEED=42
TEST_TOLERANCE=1e-6
TEST_TIMEOUT=300
BENCHMARK_ITERATIONS=100

# Optional: External Tool Integration
# LUMERICAL_PATH=/opt/lumerical
# MEEP_PATH=/usr/local/bin
# MATLAB_PATH=/usr/local/MATLAB

# Optional: Cloud/Distributed Computing
# CLUSTER_MODE=false
# REDIS_URL=redis://localhost:6379
# DATABASE_URL=postgresql://localhost/photon_sim